= flash[:recaptcha_error]

.user-login-container
  .user-login-contents
    .user-login-header  
      = link_to root_path do
        =image_tag '/merucari logo.svg', alt: "mercari",width: 185,height: 95
        
    .user-login-main
      .login-page
        .login-no-account
          %p アカウントをお持ちでない方はこちら
          = link_to new_user_registration_path, class: 'new' do
            新規会員登録
        .login-form-inner

          = link_to user_facebook_omniauth_authorize_path, class: 'btn facebook' do
            %i.fab.fa-facebook-square
            Facebookでログイン
          
          = link_to user_google_oauth2_omniauth_authorize_path, class: 'btn google' do
            %img.fab.fa-google{src: "https://img.icons8.com/color/20/000000/google-logo.png"}
            Googleでログイン

        .user-login-form
          .form-inner
          = form_for(@user, url: session_path(resource_name)) do |f|
            .form-inner__mail
              = f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: 'user-login-input-text'
            .form-inner__mail
              = f.password_field :password, autocomplete: "off", placeholder:"パスワード", class: 'user-login-input-text'

            = f.submit 'ログイン', class: 'login-page-red-btn'  do
              ログイン
            =link_to '#', class: 'login-page-password-forget' do
              パスワードをお忘れの方

    %footer.user-login-single-footer
      %nav.clearfix.user-login-single-footer__text-list
        %ul.clearfix.user-login-single-footer__text-list
          %li.user-login-single-footer__text-list__text
            プライバシーポリシー
          %li.user-login-single-footer__text-list__text
            メルカリ利用規約
          %li.user-login-single-footer__text-list__text
            特定商取引に関する表記
      %a.single-footer-logo{href: "https://www.mercari.com/jp/"}
        %img{alt: "mercari",height: "65",src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2482339763",width: "80"}
      %p
        %small © 2019 Mercari

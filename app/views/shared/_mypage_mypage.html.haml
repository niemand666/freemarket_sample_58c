=render 'shared/main_page_header'

%main.mypage_mypage.clearfix
  =render 'shared/profile-sidebar'
  .mypage_mypage__content
    %section.mypage_mypage__content__container

      .mypage_mypage__content__container__user-head
      %ul.mypage_mypage__content__container__upper-list-tabs
        %li.mypage_mypage__content__container__upper-list-tabs__list-left--active
          %h3.mypage_mypage__content__container__upper-list-tabs__list-left__block
            =link_to "#", class: 'mypage_mypage__content__container__upper-list-tabs__list-left--active__text' do
              お知らせ
        %li.mypage_mypage__content__container__upper-list-tabs__list-right
          %h3.mypage_mypage__content__container__list-tabs__list-right__block
            =link_to "#", class: 'mypage_mypage__content__container__upper-list-tabs__list-right__text' do
              やることリスト
      .mypage_mypage__content__container__container-lists
        - (1..5).each do |i|
          .mypage_mypage__content__container__container-lists__list
            = image_tag '/goods_sample_1.jpg', size: "", alt: "buy-item-image" , class: 'mypage_mypage__content__container__container-lists__list__image'
            .mypage_mypage__content__container__container-lists__list__text
              テックエキスパートさん、他３名がいいねしました
              %i.fas.fa-chevron-right.mypage_mypage__content__container__container-lists__list__text__icon

      %h2.mypage_mypage__content__container__lower-tab-head
        購入した商品
      %ul.mypage_mypage__content__container__lower-list-tabs
        %li.mypage_mypage__content__container__lower-list-tabs__list-left--active
          %h3.mypage_mypage__content__container__lower-list-tabs__list-center__block
            =link_to "#", class: 'mypage_mypage__content__container__lower-list-tabs__list-left--active__text' do
              取引中
        %li.mypage_mypage__content__container__lower-list-tabs__list-right
          %h3.mypage_mypage__content__container__lower-list-tabs__list-right__block
            =link_to "#", class: 'mypage_mypage__content__container__lower-list-tabs__list-right__text' do
              過去の取引
      .mypage_mypage__content__container__container-lists
        - (1..5).each do |i|
          .mypage_mypage__content__container__container-lists__list
            = image_tag '/goods_sample_1.jpg', size: "", alt: "buy-item-image" , class: 'mypage_mypage__content__container__container-lists__list__image'
            .mypage_mypage__content__container__container-lists__list__text
              「早い者勝ち！訳あり中禅寺湖を購入しました」取引が完了しました。
              %i.fas.fa-chevron-right.mypage_mypage__content__container__container-lists__list__text__icon
    
    -# ペイジャーは余力あったら作る
    %ul.mypage-history.pager
      %li.pager-prev.pager-cell 
        =link_to "#" do
          %i.icon-arrow-left 
      %li.pager-next.pager-cell 
        =link_to "#" do
          %i.icon-arrow-right

= render 'shared/aside'
= render 'shared/footer'

  
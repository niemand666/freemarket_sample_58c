.credit-register-wrapper
  %header= render 'shared/main_page_header'
  .bread_crumbs
    .bread_crumbs__line
      -# config/breadcrumbs.rbに定義したmypageを呼び出し
      - breadcrumb :credit_register
      -# 下記を記述した箇所にパンくずリストが表示される。
      = breadcrumbs separator: "#{content_tag(:i, '', class: 'fas fa-chevron-right')}", class: "breadcrumbs-list"


  %main.credit-register-container
    = render 'shared/profile-sidebar'
    .credit-register-container__right
      .credit-register-container__right__header
        クレジットカード情報入力
      = form_with(url: '#' , class: "credit-register-container__right__form") do |f|
        .credit-register-container__right__form__box
          %label カード番号
          %span.contents__form__require#card-number-require 必須
          = f.text_field :name, class: "credit-register-container__right__form__box__text-field" , placeholder: '半角数字のみ'
          %ul.credit-register-container__right__form__box__cardlist
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2482339763', height: "20", width: "45"
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2482339763', height: "20", width: "45"
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2482339763', height: "20", width: "30"
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2482339763', height: "20", width: "42"
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2482339763', height: "20", width: "26"
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2482339763', height: "20", width: "45"
            %li
              = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2482339763', height: "20", width: "26"
              
          .credit-register-container__right__deadline
            %label 有効期限
            %span.contents__form__require 必須
            .credit-register-container__right__deadline__list{ style:"display:inline-flex"}
              = f.select :month, Test.months.keys.to_a, {} ,class: "credit-register-container__right__deadline__list__month"
              %span 月
              = f.select :year, Test.years.keys.to_a, {} ,class: "credit-register-container__right__deadline__list__year"
              %sapn 年

        .credit-register-container__right__form__title
          %label セキュリティコード
          %span.contents__form__require 必須
          = f.text_field :name, class: "credit-register-container__right__form__title__code" , placeholder: 'カード背面4桁もしくは3桁の番号', type: 'text'
        .credit-register-container__right__form__info
          %i.fas.fa-question-circle.credit-register-container__right__form__info__question
          %span カード裏面の番号とは？
        
        =f.submit nil, class: 'credit-register-container__right__form__btn', value: '追加する'

  
%aside= render 'shared/aside' 
%footer= render 'shared/footer'
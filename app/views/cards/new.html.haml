.login-header-wrapper
  = render 'shared/login-header4'

  -# これより先の#exp_month、#exp_year、#card_token、#cvc、#card_numberを目印にjsで個人情報を取得しデータベースに残さないよう削除してます。ご注意くださいませ
  
.signup4-wrapper
  .signup4-wrapper__contents
    .signup4-wrapper__contents__head
      支払い方法    
    = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm", class: 'signup4-wrapper__contents__title') do
      .signup4-wrapper__contents__title__main-contents
        %label.signup4-wrapper__contents__title__main-contents__label
          カード番号
        %span.signup4-wrapper__contents__title__main-contents__require 
          必須
        = text_field_tag "number", "", class: "signup4-wrapper__contents__title__main-contents__input", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number" 
        %ul.signup4-wrapper__contents__title__main-contents__card-list
          %li.signup4-wrapper__contents__title__main-contents__card-list__icon
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2482339763', height: "15", width: "40"
          %li.signup4-wrapper__contents__title__main-contents__card-list__icon
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2482339763', height: "15", width: "40"
          %li.signup4-wrapper__contents__title__main-contents__card-list__icon
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2482339763', height: "15", width: "25"
          %li.signup4-wrapper__contents__title__main-contents__card-list__icon
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2482339763', height: "15", width: "37"
          %li.signup4-wrapper__contents__title__main-contents__card-list__icon
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2482339763', height: "15", width: "21"
          %li.signup4-wrapper__contents__title__main-contents__card-list__icon
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2482339763', height: "15", width: "40"
          %li.signup4-wrapper__contents__title__main-contents__card-list__icon
            = image_tag '//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2482339763', height: "15", width: "21"
            

      .signup4-wrapper__contents__title__middle-contents
        .signup4-wrapper__contents__title__middle-contents__deadline
          %label.signup4-wrapper__contents__title__middle-contents__deadline__text
            有効期限
          %span.signup4-wrapper__contents__title__middle-contents__deadline__require
            必須
          .signup4-wrapper__contents__title__middle-contents__deadline__list{ style:"display:inline-flex"}
            %select#exp_month{name: "exp_month", type: "text", class: "signup4-wrapper__contents__title__middle-contents__deadline__list__month"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
              .signup4-wrapper__contents__title__middle-contents__deadline__list__month-text
                月
            %select#exp_year{name: "exp_year", type: "text", class: "signup4-wrapper__contents__title__middle-contents__deadline__list__year"}
              %option{value: ""} --
              %option{value: "2019"}19
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
              %p.signup4-wrapper__contents__title__middle-contents__deadline__list__year-text
                年

        .signup4-wrapper__contents__title__low-contents
          %label.signup4-wrapper__contents__title__low-contents__code 
            セキュリティコード
          %span.signup4-wrapper__contents__title__low-contents__require
            必須
          = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc", class: 'signup4-wrapper__contents__title__low-contents__input'
        .signup4-wrapper__contents__title__info
          %i.fas.fa-question-circle.signup4-wrapper__contents__title__info__icon
          .signup4-wrapper__contents__title__info__text
            カード裏面の番号とは？
          #card_token
          = submit_tag "追加する", id: "token_submit", class: 'signup4-wrapper__contents__title__info__red-btn'
            
  %footer.confirmation-footer
    %ul.confirmation-footer-container
      %li.confirmation-footer-container__list
        =link_to '#', class: 'confirmation-footer-container__list__info' do
          プライバシーポリシー
      %li.confirmation-footer-container__list
        =link_to '#', class: 'confirmation-footer-container__list__info' do
          メルカリ利用規約
      %li.confirmation-footer-container__list
        =link_to '#', class: 'confirmation-footer-container__list__info' do
          特定商取引に関する表記

      = image_tag '/mercari-logo-gray.svg', size: "", alt: "mercari-logo-gray" , class: 'confirmation-footer-container__image'

    .confirmation-footer-container__footer-text
      ©︎2019 Mercari




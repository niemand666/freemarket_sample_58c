.login-header-wrapper

  -# ログインページ用ヘッダー
  = render 'shared/login-header3'

.signup3-wrapper
  .signup3-wrapper__contents
    .signup3-wrapper__contents__head
      発送元・お届け先住所入力
    = form_with model: @address, url: addresses_path, local: true , class: 'signup3-wrapper__contents__form'do |f|

      .signup3-wrapper__contents__form__title1
        = f.label 'お名前', class: 'signup3-wrapper__contents__form__title1__text'
        %span.signup3-wrapper__contents__form__title1__require 
          必須
        = f.text_field :family_name, class: 'signup3-contents__form__input', placeholder: '例）山田'
        = f.text_field :first_name, class: 'signup3-contents__form__input', placeholder: '例）綾'

      .signup3-wrapper__contents__form__title1
        = f.label 'お名前カナ', class: 'signup3-wrapper__contents__form__title1__text'
        %span.signup3-wrapper__contents__form__title1__require 
          必須
        = f.text_field :family_name_kana, class: 'signup3-contents__form__input', placeholder: '例）ヤマダ'
        = f.text_field :first_name_kana, class: 'signup3-contents__form__input', placeholder: '例）アヤ'

      .signup3-wrapper__contents__form__title1
        = f.label '郵便番号', class: 'signup3-wrapper__contents__form__title1__text'
        %span.signup3-wrapper__contents__form__title1__require 
          必須
        = f.text_field :postalcode, class: 'signup3-contents__form__input', placeholder: '例) 123-4567', maxlength:"8"
      
      .signup3-wrapper__contents__form__title1
        = f.label '都道府県', class: 'signup3-wrapper__contents__form__title1__text'
        %span.signup3-wrapper__contents__form__title1__require 
          必須 
        = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: '---'}, {class: 'signup3-wrapper__contents__form__title1__input'}
        
      .signup3-wrapper__contents__form__title1
        = f.label '市町村', class: 'signup3-wrapper__contents__form__title1__text'
        %span.signup3-wrapper__contents__form__title1__require 
          必須
        = f.text_field :city, maxlength: '10', placeholder: '例）横浜市緑区', class: 'signup3-contents__form__input' 

      .signup3-wrapper__contents__form__title1
        = f.label '番地', class: 'signup3-wrapper__contents__form__title1__text'
        %span.signup3-wrapper__contents__form__title1__require 
          必須
        = f.text_field :block, maxlength: '10', placeholder: '例）青山1-1-1', class: 'signup3-contents__form__input'

      .signup3-wrapper__contents__form__title1
        = f.label '建物', class: 'signup3-wrapper__contents__form__title1__text'
        %span.signup3-wrapper__contents__form__title1__require-gray 
          任意
        = f.text_field :building_name, maxlength: '10', placeholder: '例）柳ビル103', class: 'signup3-contents__form__input'

      .signup3-wrapper__contents__form__title1
        = f.label '電話', class: 'signup3-wrapper__contents__form__title1__text'
        %span.signup3-wrapper__contents__form__title1__require-gray 
          任意
        = f.text_field :house_number, maxlength: '14', placeholder: '例）09012345678', class: 'signup3-contents__form__input'
        = f.submit '次に進む', class: 'contents__btn'
  
  %footer.confirmation-footer
    %ul.confirmation-footer-container
      %li.confirmation-footer-container__list
        =link_to '#', class: 'confirmation-footer-container__list__info' do
          プライバシーポリシー
      %li.confirmation-footer-container__list
        =link_to '#', class: 'confirmation-footer-container__list__info' do
          メルカリ利用規約
      %li.confirmation-footer-container__list
        =link_to '#', class: 'confirmation-footer-container__list__info' do
          特定商取引に関する表記

      = image_tag '/mercari-logo-gray.svg', size: "", alt: "mercari-logo-gray" , class: 'confirmation-footer-container__image'

    .confirmation-footer-container__footer-text
      ©︎2019 Mercari